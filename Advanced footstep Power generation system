#include <LiquidCrystal.h>
LiquidCrystal lcd(12, 11, 5, 4, 3, 2);

int piezoPin = A0;
float voltage = 0;
float energy = 0;

void setup() {
  lcd.begin(16, 2);
  lcd.print("Footstep Energy");
  delay(1000);
  lcd.clear();
}

void loop() {
  int sensorValue = analogRead(piezoPin);
  voltage = sensorValue * (5.0 / 1023.0);
  if (voltage > 0.2) { // Detect a step
    energy += voltage * 0.5; // Approx energy accumulation
  }

  lcd.setCursor(0, 0);
  lcd.print("Volt: ");
  lcd.print(voltage);
  lcd.setCursor(0, 1);
  lcd.print("Energy: ");
  lcd.print(energy);
  delay(500);
}
